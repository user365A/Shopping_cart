
<%- include('../layouts/adminheader') %>
<div class="container">
    <br>
<% if(errors) {%> 
    <% errors.forEach(function(err){ %> 
        <div class="alert alert-danger">
            <%= err.msg %> 
        </div>
    <% }); %> 
<% } %> 
<h2 class="page-title">Add a page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>
<form action="" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>">
    </div>

    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>">
    </div>
    <div class="form-group">
        <label for="">Content</label>
        <textarea class="form-control" name="content" id="ta" cols="30" rows="10"><%= content %></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-warning">submit</button>
</form>
</div>
<%- include('../layouts/adminfooter') %>
